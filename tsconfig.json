{
    "compilerOptions": {
        "target": "es2017",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "lib": [
            "es2015",
            "es2015.promise",
            "es2016.array.include",
            "dom"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "esnext",
        "types": []
    },
    "include": [
        "./src/"
    ],
}
